{% extends "form-layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block formContent %}
  {{ govukRadios({
    idPrefix: "register",
    name: "register",
    fieldset: {
      legend: {
        text: pageHeading,
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: fieldErrors['register'],
    items: registers
  }) }}

  {{ govukButton({
      attributes: {
        id: "continue-button"
      },
      text: "Continue",
      classes: "govuk-button"
  }) }}

{% endblock %}
